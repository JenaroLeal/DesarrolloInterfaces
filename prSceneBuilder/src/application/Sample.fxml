<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="application.SampleController">
   <center>
      <BorderPane prefHeight="265.0" prefWidth="374.0" BorderPane.alignment="CENTER">
         <top>
            <Label text="Hola mundo" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="226.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Introduce un mensaje" />
                  <TextField fx:id="txtMensaje" maxHeight="200.0" maxWidth="100.0" />
                  <Button fx:id="btnEnviar" mnemonicParsing="false" onAction="#mostrarMensaje" text="Enviar" />
                  <Label fx:id="lblMensaje" textFill="#f24e4e">
                     <padding>
                        <Insets top="2.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </center>
</BorderPane>
